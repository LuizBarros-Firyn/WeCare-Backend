{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "prettier/prettier": "error",
    "no-unused-vars": 0,
    "camelcase": "off" // desabilitado para evitar erros relacionados a route params ou valores do banco de dados
  }
}
